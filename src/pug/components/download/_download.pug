section#download.download

  .download__bg(parallax-js)
    div
      span(floating-node-js)
    div(data-stellar-ratio="0.85")
      img(src="img/visual-about-1.png" srcset="img/visual-about-1@2x.png 2x" alt="" floating-node-js)
    div(data-stellar-ratio="1.15")
      img(src="img/visual-about-2.svg" alt="" floating-node-js)
    div(data-stellar-ratio="0.8")
      img(src="img/visual-about-3.svg" alt="" floating-node-js)
    div(data-stellar-ratio="0.9")
      img(src="img/visual-about-4.png" srcset="img/visual-about-4@2x.png 2x" alt="" floating-node-js)

  .c-grid
    .download__wrapper

      h1.download__title Tenha sua SegundaLinha em qualquer dispositivo.

      .download__btn.c-btn__wrapper.c-btn__wrapper--center
        a.c-btn(href="#")
          i.icon-font.icon-apple
          span Download for Mac

      p.download__label SEJA UM BETA

      .download__box-wrapper
        div
          a.download__box(href="#")
            div
              i.icon-font.icon-ios
            div
              p SegundaLinha para iOS
              span Seja um beta
        div
          a.download__box(href="#")
            div
              i.icon-font.icon-android
            div
              p SegundaLinha para Android
              span Seja um beta
        div
          a.download__box(href="#")
            div
              i.icon-font.icon-apple
            div
              p SegundaLinha para Mac
              span Seja um beta
        div
          a.download__box(href="#")
            div
              i.icon-font.icon-windows
            div
              p SegundaLinha para Windows
              span Seja um beta
        div
          a.download__box(href="#")
            div
              i.icon-font.icon-global
            div
              p SegundaLinha na Web
              span Web app

// SECTION :: END
